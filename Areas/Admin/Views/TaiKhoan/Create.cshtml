
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHomeAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
<div class="sign-in-htm" style="margin-bottom: 4cm">
    <div class="group" style="color: red">
        @ViewData["CheckMail"]
        @ViewBag.er
    </div>
    <div class="group">
        <label for="ten" class="label">Họ và tên</label><br />
        <input id="HOVATEN" type="text" class="form-control" name="HOVATEN" required="true">
    </div>

    <div class="group">
        <label for="mail" class="label">Gmail</label>
        <input id="GMAIL" type="email" class="form-control" name="GMAIL" required="true">

    </div>
    <div class="group">
        <label for="Pass" class="label">Mật khẩu</label>
        <input id="PASS" type="password" class="form-control" name="PASS" required="true" minlength="4">
    </div>
    <div class="group">
        <label for="rePass" class="label">Xác nhận mật khẩu</label>
        <input id="rePass" type="password" class="form-control" name="rePass" required="true" minlength="4">
    </div>
    <div class="group">
        <label for="sdt" class="label">Số điện thoại</label>
        <input id="SDT" type="tel" minlength="10" maxlength="10" class="form-control" name="SDT" required="true">

    </div>
    <div class="group">

        <label for="gioitinh" class="label">Giới tính</label>
        @*<input id="GIOITINH" type="number" class="form-control" name="GIOITINH">*@
        <input name="GIOITINH" type="radio" value="1" />Nam
        <input name="GIOITINH" type="radio" value="0" />Nữ
    </div>

    <div class="group">
        <label for="day" class="label">Ngày tháng năm sinh</label>
        <input id="NAMSINH" type="date" class="form-control" name="NAMSINH" required="true">

    </div>
    <div class="group">
        <label for="diachi" class="label">Địa chỉ</label>
        <input id="DIACHI" type="text" class="form-control" name="DIACHI" required="true">

    </div>
    <a href="#" class="group">
        <input type="submit" class="button" value="Tạo">
    </a>
    <div style="margin-top: 0.5cm">
        <a class="btn btn-primary" href="@Url.Action("Index")" style="margin-left: 10px; margin-bottom:5px">Quay về</a>
    </div>
    @*<button class="btnSignUp" type="submit">Đăng Ký</button>*@


</div>
}

