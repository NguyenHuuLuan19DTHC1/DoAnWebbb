@using DoAnWebbb.Models
@using PagedList.Mvc;
@model DoAnWebbb.Models.NGUOIDUNG
@{
    ViewBag.Title = "Edit Account";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHomeAdmin.cshtml";
}

<div>
    <div class="box">
        <h2 style="text-align:center; color: black; margin-top:10px">Quản Lý Tài Khoản</h2>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-hover">
                <thead style="color:black; text-align:center">
                    <tr>
                        <th>
                            Quyền
                        </th>
                        <th>
                            Tên Tài Khoản
                        </th>
                        <th>
                            Họ Và Tên
                        </th>
                        <th>
                            Giới Tính
                        </th>
                        <th>
                            Năm Sinh
                        </th>
                        <th>
                            Số Điện Thoại
                        </th>
                        <th>
                            Gmail
                        </th>
                        <th>
                            Địa Chỉ
                        </th>
                        <th>
                            Ngày Đăng Ký
                        </th>
                        <th>
                            Trạng thái
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr style="color:black">
                        <td>
                            @Html.DisplayFor(Model => Model.QUYEN.TENQUYEN)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => Model.USERNAME)
                        </td>

                        <td>
                            @Html.DisplayFor(Model => Model.HOVATEN)
                        </td>
                        <td>
                            @if (Model.GIOITINH == 1)
                            {
                                <p>Nam</p>
                            }
                            else
                            {
                                <p>Nữ</p>
                            }
                        </td>
                        <td>
                            @Html.ValueFor(Model => Model.NAMSINH, "{0:dd/MM/yyyy}")
                        </td>
                        <td>
                            @Html.DisplayFor(Model => Model.SDT)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => Model.GMAIL)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => Model.DIACHI)
                        </td>
                        <td>
                            @Html.ValueFor(Model => Model.NGAYDANGKY, "{0:dd/MM/yyyy}")
                        </td>
                        <td>
                            @if (Model.TRANGTHAI == 1)
                            {
                                <span class="trangthai label-conhang">Hoạt Động</span>
                            }
                            else if (Model.TRANGTHAI == 0)
                            {
                                <span class="trangthai label-hethang">Khóa</span>
                            }

                        </td>
                        @*                            <td>
                                <a class="btn btn-primary" style="font-size:10px;" href="@Url.Action("#", new { id=item.USERNAME })"><i class="fa fa-fw  fa-pen"></i></a>
                                <a class="btn btn-danger" style="font-size:10px; margin-top:5px" href="@Url.Action("#", new { id=item.USERNAME })"><i class="fa fa-fw fa-trash"></i></a>
                            </td>*@
                    </tr>
                </tbody>
            </table>
            @using (Html.BeginForm())
            {

                    @Html.AntiForgeryToken()
        <div style="color: red">
            @ViewBag.err

        </div>


                <p>
                    <input type="submit" value="Delete" />
                </p>
            }
            <div style="margin-top: 0.5cm">
                <a class="btn btn-primary" href="@Url.Action("Index")" style="margin-left: 10px; margin-bottom:5px">Quay về</a>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
</div>

