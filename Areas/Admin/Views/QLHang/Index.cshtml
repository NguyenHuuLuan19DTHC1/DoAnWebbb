@model IEnumerable<DoAnWebbb.Models.NHACUNGCAP>
@{
    ViewBag.Title = "QLNCC";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHomeAdmin.cshtml";
}

<div class="box">
    <h2 style="text-align:center; color: black; margin-top:10px">Quản Nhà Cung Cấp</h2>
    <p>
        <a class="btn btn-primary" href="@Url.Action("Create","QLHang")" style="margin-left: 16px">Thêm NCC</a>
    </p>

    <div class="box-body">
        <table id="example1" class="table table-bordered table-hover">
            <thead style="color:black; text-align:center">
                <tr>
                    <th>
                        Mã NCC
                    </th>
                    <th>
                        Tên NCC
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="color:black">
                        <td>
                            @Html.DisplayFor(modelItem => item.MANCC)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TENNCCC)
                        </td>
                        <td>
                            <a class="btn btn-primary" style="font-size: 10px; margin-top: 5px" href="@Url.Action("Edit", new { id=item.MANCC })"><i class="fa fa-fw  fa-pen"></i></a>
                            <a class="btn btn-danger" style="font-size:10px; margin-top:5px" href="@Url.Action("Delete", new { id=item.MANCC })"><i class="fa fa-fw fa-trash"></i></a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

